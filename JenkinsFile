pipeline {
    agent any
    parameters {
        choice(name: 'NUMBER',
               choices: [10,20,30,40,50,60,70,80,90],
               description: 'Select the value for F(n) for the Fibonnai sequence.')
    }
    options {
        buildDiscarder(logRotator(daysToKeepStr: '10', numToKeepStr: '10'))
        timeout(time: 12, unit: 'HOURS')
        timestamps()
    }
    triggers {
        cron '@midnight'
    }
    stages {
        stage('Check for script') {
            steps {
                // 'chmod' is not a Windows command and is not needed.
                // We'll just echo a message instead.
                echo "Skipping 'chmod', not required on Windows."
            }
        }
        stage('Run Fibonacci Script') {
            steps {
                // We only need one stage to run the script.
                // We use 'bat' to call the Windows batch script '.bat'
                // and pass the 'NUMBER' parameter to it.
                // Note the Windows-style backslashes '\'.
                bat ".\\scripts\\fibonacci.bat ${env.NUMBER}"
            }
        }
    }
}

